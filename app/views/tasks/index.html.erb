<h1> My Tasks </h1>
<% @tasks.each do |task| %>
  <div class='list-box'>
    <h2 > <% if task.completed %>
        <img src="https://www.pinclipart.com/picdir/middle/154-1543711_cuneyt-meran-testimonial-checked-box-clip-art-png.png" alt="checked-box" class='check-box'>
        <% else %>
        <img src="https://cdn4.iconfinder.com/data/icons/social-productivity-line-art-4/128/checkbox-square-unchecked-512.png" alt="checked-box" class='check-box'>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to  task_path(task), method: :delete do %>
        <img src="https://image.freepik.com/free-icon/trash-bin-symbol_318-10194.jpg" alt="checked-box" class='check-box'>
        <% end %>
  </h2>
  </div>

<% end %>

<%= link_to 'Add a new task', tasks_new_path%>
